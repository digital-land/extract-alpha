{% extends "layouts/prototype-default.njk" %}
{% set pageName = "Location found" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "components/simple-map/macro.njk" import simpleMap %}

{% macro locationFound(fileName, address, eastingNorthing, latLng) %}
    <p class="govuk-body">
      <strong>File name</strong>
      <br />
      {{ fileName }} 
    </p>
    <p class="govuk-body">
      <strong>Address</strong>
      <br />
      {{ address }}<br />
      <a href="#" data-function="copyable" class="govuk-link"
        data-clipboard-text="{{ address }}">Copy</a>
    </p>

    <p class="govuk-body">
      <b>X, Y (Easting, Northing)</b>
      <br />
      {{ eastingNorthing }}<br />
      <a href="#" data-function="copyable" class="govuk-link"
        data-clipboard-text="{{ eastingNorthing }}">Copy</a>
    </p>

    <p class="govuk-body">
      <b>Latitude, Longitude</b>
      <br />
      {{ latLng }}
      <br />
      <a href="#" data-function="copyable" class="govuk-link"
        data-clipboard-text="{{ latLng | replace(' ', '') }}">Copy</a>
    </p>
    
{% endmacro %}

{% block content %}
  {{super()}}
  <h1 class="govuk-heading-l">{{pageName}}</h1>

    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible govuk-!-margin-bottom-7"/>
  

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">
        {{ locationFound(
          "TPO_38 _15-1.pdf",
          "Daintry Street, Oakhill, Stoke-on-Trent",
          "386875, 343876",
          "52.99205243310385, -2.1969858810409884"
        ) }}
      </div>
      <div class="govuk-grid-column-two-thirds">
        <img src="/assets/prototype/sample-map.png" alt="" width="100%" />
      </div>
    </div>

     <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible govuk-!-margin-bottom-7"/>
  

    {{ govukButton({text: "Upload a new document",href: "/prototypes/geo-reference"}) }}

{% endblock %}