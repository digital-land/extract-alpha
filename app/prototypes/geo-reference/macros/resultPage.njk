{% from "components/location-info/macro.njk" import locationInfo %}
{% from "components/simple-map/macro.njk" import simpleMap %}


{% macro resultPage(params) %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">
        {{ locationInfo(params) }}
      </div>
      <div class="govuk-grid-column-two-thirds">
         {{ simpleMap({
                          zoom: params.zoom | default(16),
                          lat: params.lat,
                          lng: params.lng,
                          enableToggle: false
                        }) }}
      </div>
    </div>


{% endmacro %}